@import "../lib/frame.wxss";
.bgc{
width: 100%;
height: 100vh;
margin-top:0;
color:#fff;
background: linear-gradient(rgb(255, 182, 148), rgb(255,127,91));
}
.frame{
  width:100%;
  text-align: center;
  margin-top: 300rpx;
}
.countdown{
  margin:0 auto;
  height:10vh;
  display:flex;
  flex-direction: row;
}
.rectangle{
  width:70%;
  margin-top:100rpx;
  margin-bottom:30rpx;
  margin-left:auto;
  margin-right:auto;
  font-size: 5vh;
  line-height: 10vh;
}
.colon{
  margin-top: -7px;
  font-size:8vh;
  font-weight: bold;
  text-align:center;
}
.word{
  width:30%;
  text-align: center;
  font-size: 20px;
}
.welcome{
  width:100%;
  text-align: center;
  margin-top: 150rpx;
  font-size: 20px;
}