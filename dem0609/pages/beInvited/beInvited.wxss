page{
  margin:0;
  padding:0;
  box-sizing: border-box; 
}
.welcome{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color:rgba(0,0,0,.5);
}
.come{
  position: relative; 
  width: 75%;
  height: 274rpx;
  left: 0;
  right: 0;
  top: 50%;
  bottom: 0;
  margin: auto;
  margin-top:-137rpx;
  padding-top: 50rpx;
  z-index: 9999;
  background-color: #fff;
  border-radius: 10rpx;
}
.welcome_title{
  text-align: center;
  font-size: 40rpx;
}
.welcome_content{
  padding: 30rpx 0;
  text-align: center;
  color: #bababa;
  border-bottom: 1px solid #dfd9d9;
}
.come>button{
  font-size: 40rpx;
  color:#02bb00;
  background-color: #fff;
}
.come>button::after{
  border:none;
}


.ufo {  
  /* position: relative;   */
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  


.userinfo-nickname {
  color: #aaa;
}
.bannerImg{
  width:100%;
  max-height: 450rpx;
}
.indexWrap{
  position: absolute;
  width:100%;
  margin-top: -140rpx;
}
.flex-row-center{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.indexCon{
  margin-top: 10rpx;
  line-height: 43rpx;
}
.wenan{
  margin-top: 110rpx;
}
.indexWrap>button{
  width:80%;
}
.beFriends{
  margin-top: 120rpx;
  color:#fff;
  background-color: rgb(255,127,91);
}
.refuse{
  margin-top: 20rpx;
  color:#fff;
  background-color: rgb(217,217,217);
}