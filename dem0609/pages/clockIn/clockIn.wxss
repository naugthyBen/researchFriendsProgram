page{
 background-color: rgb(239,239,244);
}
.clock{
  position: relative;
  width:90%;
  margin-left: 5%;
  margin-top: 80rpx;
}
.hidden{
  display: none;
}
.show{
  display: block;
}
.clockImg{
  width:100%;
  height: 650rpx;
}
.aggregate{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-weight: bold;
  font-size: 40rpx;
}
.curTime{
  position: absolute;
  top: 170rpx;
  width:60%;
  margin: 0 auto;
  right: 0;
  left: 0;
  text-align: center;
  padding: 30rpx 0;
  background-color:#eee;
  opacity: .8;
  border-radius: 20rpx;
}
.timeNum{
  font-size: 70rpx;
}
.timeTip{
  font-size: 30rpx;
}
.motto{
  position:absolute;
  top: 450rpx;
  width:90%;
  margin: 0 auto;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 43rpx;
  color:rgb(92, 92, 92);
}
.clickClockIn{
  margin-top: -80rpx;
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  font-size: 45rpx;
  background-color: rgb(255,127,91);
}
.friendsClock{
  margin-top: 40rpx;
  width:100%;
  text-align: center;
  color:gray;
}
.rankClock{
  margin-top:40rpx;
  width:100%;
  text-align: center;
}
.toRank{
  margin-top:30rpx;
  width:100%;
  text-align: center;
  color:blue;
  text-decoration-line: underline;
}
.foot{
  position: fixed;
  width:100%;
  height: 102rpx;
  bottom: 0;
  background-color: #fff;
}
.footli{
  width:50%;
  float: left;
  padding-top: 10rpx;
  text-align: center;
  font-size: 25rpx;
}
.footImg{
  width:50rpx;
  height: 50rpx;
}
.choosed{
  color:#ff7f5b;
}
.default{
  color:#000;
}

.con{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
  padding-bottom: 40rpx;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userinfo-nickname {
  font-size: 45rpx;
}
.user-motto{
  margin-top: 30rpx;
  color:rgb(74,144,226);
  font-size: 13px;
}
.mainCon{
  margin-top: 60rpx;
}
.myFirend,.invitation{
  padding:30rpx 0 30rpx 40rpx;
  background-color: #fff;
}
.myFirend{
  border-bottom:1rpx solid #ccc;
}